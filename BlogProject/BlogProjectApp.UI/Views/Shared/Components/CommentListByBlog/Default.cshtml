@model IEnumerable<Comment>

@if (Model.Count() == 0)
{
    <div class="media">
        <h2>Burada yorum yok, ilk yorumu siz yapın</h2>
    </div>
}
else
{
    <div class="comment-top">
        <h4>Yorumlar</h4>
        @foreach (var item in Model)
        {
            <div class="media">
                <img src="~/web/images/t1.jpg" alt="" class="img-fluid" />
                <div class="media-body">
                    <h5 class="mt-0">@item.UserName</h5>
                    <p>
                        @item.Content
                    </p>
                </div>
            </div>
        }

    </div>
}

